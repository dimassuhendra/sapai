root = true

[*]
charset = utf-8
useTabs = false,
tabWidth = 4
endOfLine = lf
# end_of_line = lf
indent_size = 4
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true

[*.md]
trim_trailing_whitespace = false

[*.{yml,yaml}]
indent_size = 2

[compose.yaml]
indent_size = 4

prettier_semi = true
prettier_single_quote = true
prettier_print_width = 100
prettier_trailing_comma = all
